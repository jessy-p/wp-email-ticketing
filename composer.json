{
    "name": "yourname/wp-email-ticketing",
    "description": "WordPress plugin for email-based ticketing system.",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "php-stubs/wordpress-stubs": "dev-master",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WPEmailTicketing\\": "src/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=WordPress --extensions=php ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
